<Window x:Class="ZoomVideoSDK.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZoomVideoSDK.WPF"
        mc:Ignorable="d"
        Title="Zoom Video SDK Demo - WPF" Height="650" Width="1000">
    
    <DockPanel>
        <!-- Status Bar at bottom -->
        <StatusBar DockPanel.Dock="Bottom" Name="StatusBar">
            <StatusBarItem>
                <TextBlock Name="StatusLabel" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
        
        <!-- Main content area -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left side - Controls Panel -->
            <Grid Grid.Column="0" Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="140"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Session Configuration Group -->
                <GroupBox Grid.Row="0" Header="Session Configuration" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="Session:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="SessionNameTextBox" VerticalAlignment="Center"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="Token:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="TokenTextBox" VerticalAlignment="Center"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Content="User:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="UserNameTextBox" VerticalAlignment="Center"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Content="Password:" VerticalAlignment="Center"/>
                        <PasswordBox Grid.Row="3" Grid.Column="1" Name="PasswordTextBox" VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>
                
                <!-- Session & Audio Controls Group -->
                <GroupBox Grid.Row="1" Header="Session &amp; Audio Controls" Padding="10">
                    <WrapPanel Orientation="Horizontal">
                        <Button Name="PreviewTokenButton" Content="PREVIEW TOKEN" Width="120" Height="35" Margin="3"
                                Background="Blue" Foreground="White" FontWeight="Bold" FontSize="10"/>
                        <Button Name="JoinButton" Content="JOIN SESSION" Width="120" Height="35" Margin="3"
                                Background="Green" Foreground="White" FontWeight="Bold" FontSize="10"/>
                        <Button Name="LeaveButton" Content="LEAVE SESSION" Width="120" Height="35" Margin="3"
                                Background="Red" Foreground="White" FontWeight="Bold" FontSize="10"/>
                        <Button Name="MuteMicButton" Content="Mute Mic" Width="100" Height="30" Margin="3"/>
                        <Button Name="MuteSpeakerButton" Content="Mute Speaker" Width="100" Height="30" Margin="3"/>
                    </WrapPanel>
                </GroupBox>
                
                <!-- Video Controls Group -->
                <GroupBox Grid.Row="2" Header="Video Controls" Padding="10">
                    <WrapPanel Orientation="Horizontal">
                        <Button Name="StartVideoButton" Content="Start Video" Width="100" Height="30" Margin="3"/>
                        <Button Name="StopVideoButton" Content="Stop Video" Width="100" Height="30" Margin="3"/>
                    </WrapPanel>
                </GroupBox>
                
                <!-- Device Selection Group -->
                <GroupBox Grid.Row="3" Header="Device Selection" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="Microphone:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Name="MicrophoneComboBox" VerticalAlignment="Center"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="Speaker:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Name="SpeakerComboBox" VerticalAlignment="Center"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Content="Camera:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" Name="CameraComboBox" VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>
            </Grid>
            
            <!-- Right side - Video Panel -->
            <Grid Grid.Column="1" Margin="5,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Self Video Panel -->
                <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,2">
                    <Grid Background="Black">
                        <Image Name="SelfVideoImage" Stretch="Uniform"/>
                        <TextBlock Text="Self Video" Foreground="White" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" FontSize="14"/>
                    </Grid>
                </Border>
                
                <!-- Remote Video Panel -->
                <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="0,2,0,0">
                    <Grid Background="Black">
                        <Image Name="RemoteVideoImage" Stretch="Uniform"/>
                        <TextBlock Text="Remote Video" Foreground="White" HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" FontSize="14"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
