<?xml version="1.0" encoding="utf-8"?>
<Window  size="600,700" caption="0,0,0,30" shadow="file='shadow\Shadow.png' corner='40,40,40,40' size='18,18,18,18' resize='false' show='true'" >
	<Font id="0" name="Microsoft YaHei" size="14" bold="false" underline="false" italic="false" default="true" />
	<Font id="1" name="Microsoft YaHei" size="12" bold="false" underline="false" italic="false" />
	<Font id="2" name="Microsoft YaHei" size="21" bold="false" underline="false" italic="false" />	
	<TabLayout name="tablayout_main" selectedid="0" topbordersize="1" bkcolor="#FFFFFFFF" bordercolor="#ff000000" padding="2,2,2,2" >
		<VerticalLayout bkcolor="0xFF3B3C3C" >
			<HorizontalLayout height="40">
				<Button name="btn_settings" width="16" height="16" padding="10,10,0,0" normalimage="res='JOINSESSION_SETTINGS' restype='ZPIMGRES' "/>
				<VerticalLayout />
				<Button name="close" width="28" height="26" tooltip="close" padding="0,5,5,0" normalimage="res='BUTTON_CLOSE' restype='ZPIMGRES' source='0,0,28,26' " hotimage="res='BUTTON_CLOSE' restype='ZPIMGRES' source='0,26,28,52' " pushedimage="res='BUTTON_CLOSE' restype='ZPIMGRES' source='0,52,28,78' " disabledimage="res='BUTTON_CLOSE' restype='ZPIMGRES' source='0,78,28,104' "/>
			</HorizontalLayout>
			
			<!-- Enhanced Session Configuration -->
			<VerticalLayout padding="20,20,20,20">
				<Label text="Enhanced Single Window Demo" font="2" textcolor="#FFFFFFFF" align="center" height="40" />
				
				<!-- Input Fields -->
				<Label padding="0,20,0,0" text="Session Name" textcolor="#FFFFFFFF" font="0" height="30" />
				<RichEdit padding="0,0,0,0" name="edit_session_name" font="0" tipvalue="Enter session name" tipvaluecolor="0xFF999999" textcolor="#FFF5F5F5" width="340" height="40" valign="vcenter" inset="20,10,20,0" multiline="false" wanttab="false" bkimage="res='EDIT_COMMON_NOR' restype='ZPIMGRES' corner='10,10,10,10' " />
				
				<Label padding="0,10,0,0" text="Your Name" font="0" textcolor="#FFFFFFFF" height="30" />
				<RichEdit padding="0,0,0,0" name="edit_your_name" font="0" text="VideoSDK_User" tipvaluecolor="0xFF999999" textcolor="#FFF5F5F5" width="340" height="40" valign="vcenter" inset="20,10,20,0" multiline="false" wanttab="false" bkimage="res='EDIT_COMMON_NOR' restype='ZPIMGRES' corner='10,10,10,10' " />
				
				<Label padding="0,10,0,0" text="Password (Optional)" font="0" textcolor="#FFFFFFFF" height="30" />
				<RichEdit padding="0,0,0,0" name="edit_password" password="true" font="0" tipvalue="Enter password" tipvaluecolor="0xFF999999" textcolor="#FFF5F5F5" width="340" valign="vcenter" height="40" inset="20,10,20,0" multiline="false"  wanttab="false" bkimage="res='EDIT_COMMON_NOR' restype='ZPIMGRES' corner='10,10,10,10' "/>
				
				<Label padding="0,10,0,0" text="JWT Token" font="0" textcolor="#FFFFFFFF" height="30" />
				<RichEdit padding="0,0,0,0" name="edit_jwt_token" font="0" tipvalue="Enter JWT token" tipvaluecolor="0xFF999999" textcolor="#FFF5F5F5" width="340" height="40" valign="vcenter" inset="20,10,20,0" multiline="false" wanttab="false" bkimage="res='EDIT_COMMON_NOR' restype='ZPIMGRES' corner='10,10,10,10' " />
				
				<!-- Status Display -->
				<Label padding="0,20,0,0" name="label_status" text="Status: Ready to connect" font="0" textcolor="#FFFFFFFF" height="30" />
				
				<!-- Control Buttons -->
				<HorizontalLayout height="50" padding="0,20,0,0">
					<Button name="btn_join_session" text="Join Session" font="0" width="150" height="40" textcolor="#FFFFFFFF" disabledtextcolor="#FFA7A6AA" align="center" bordersize="1" borderround="2,2" normalimage="res='BUTTON_COMMON_BTN_NOR' restype='ZPIMGRES' corner='10,10,10,10'"/>
					<Control width="20" />
					<Button name="btn_leave_session" text="Leave Session" font="0" width="150" height="40" enabled="false" textcolor="#FFFFFFFF" disabledtextcolor="#FFA7A6AA" align="center" bordersize="1" borderround="2,2" normalimage="res='BUTTON_COMMON_BTN_NOR' restype='ZPIMGRES' corner='10,10,10,10'"/>
				</HorizontalLayout>
				
				<!-- Video/Audio Controls -->
				<HorizontalLayout height="50" padding="0,10,0,0">
					<Button name="btn_toggle_video" text="Start Video" font="0" width="100" height="40" textcolor="#FFFFFFFF" disabledtextcolor="#FFA7A6AA" align="center" bordersize="1" borderround="2,2" normalimage="res='BUTTON_COMMON_BTN_NOR' restype='ZPIMGRES' corner='10,10,10,10'"/>
					<Control width="10" />
					<Button name="btn_toggle_audio" text="Unmute Audio" font="0" width="120" height="40" textcolor="#FFFFFFFF" disabledtextcolor="#FFA7A6AA" align="center" bordersize="1" borderround="2,2" normalimage="res='BUTTON_COMMON_BTN_NOR' restype='ZPIMGRES' corner='10,10,10,10'"/>
				</HorizontalLayout>
				
				<!-- Camera Selection -->
				<HorizontalLayout height="40" padding="0,10,0,0">
					<Label text="Camera:" width="60" textcolor="#FFFFFFFF" font="0" />
					<Combo name="combo_camera" width="200" height="30" textcolor="#FFF5F5F5" font="0" />
				</HorizontalLayout>
				
				<!-- Volume Controls -->
				<HorizontalLayout height="40" padding="0,10,0,0">
					<Label text="Mic Vol:" width="60" textcolor="#FFFFFFFF" font="1" />
					<Slider name="slider_mic_volume" width="100" height="20" thumbsize="12,20" />
					<Control width="20" />
					<Label text="Speaker Vol:" width="80" textcolor="#FFFFFFFF" font="1" />
					<Slider name="slider_speaker_volume" width="100" height="20" thumbsize="12,20" />
				</HorizontalLayout>
				
				<!-- Session Info -->
				<HorizontalLayout height="30" padding="0,20,0,0">
					<Label text="Session:" width="60" textcolor="#FFFFFFFF" font="1" />
					<Label name="label_session_info" text="Not Connected" textcolor="#FFFFFFFF" font="1" />
					<Control width="20" />
					<Label text="Duration:" width="60" textcolor="#FFFFFFFF" font="1" />
					<Label name="label_duration" text="00:00:00" textcolor="#FFFFFFFF" font="1" />
				</HorizontalLayout>
				
				<!-- Chat -->
				<Label padding="0,10,0,0" text="Chat Messages:" textcolor="#FFFFFFFF" font="0" height="25" />
				<RichEdit name="richedit_chat_display" bkcolor="#FFFFFFFF" readonly="true" vscrollbar="true" height="80" />
				<HorizontalLayout height="30" padding="0,5,0,0">
					<RichEdit name="edit_chat_input" font="0" tipvalue="Type a message..." tipvaluecolor="0xFF999999" textcolor="#FF000000" height="25" valign="vcenter" inset="10,5,10,5" multiline="false" wanttab="false" bkimage="res='EDIT_COMMON_NOR' restype='ZPIMGRES' corner='5,5,5,5'"/>
					<Button name="btn_send_chat" text="Send" width="60" height="25" textcolor="#FFFFFFFF" disabledtextcolor="#FFA7A6AA" align="center" bordersize="1" borderround="2,2" normalimage="res='BUTTON_COMMON_BTN_NOR' restype='ZPIMGRES' corner='5,5,5,5'"/>
				</HorizontalLayout>
			</VerticalLayout>
		</VerticalLayout>
	</TabLayout>
</Window>
